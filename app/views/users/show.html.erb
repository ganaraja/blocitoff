
  <div id="items" class='items list-group col-md-8 pull-left'>
  <% unless @items.blank? %>
    <h1><%= "The following are the items present with the user"%></h1>
    <div id="itemsall" class="allitems">
      <%= render @items %>
    </div>
  <% else %>
    <h1> <%= "Items are empty" %></h1>
  <% end %>
  </div>


  <div class='col-md-6'>
  <h1> <%= "Add new item" %></h1>
    <%= render partial: 'items/form', locals: {user: @user} %>
  </div>
